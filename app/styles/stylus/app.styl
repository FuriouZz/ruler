#ruler
    position: fixed
    top: 0
    left: 0
    z-index: 1000
    width: 100%
    height: 100%
    width: 100%

    span
        width: 18px
        height: 18px
        display: block
        background-color: #535353
        position: absolute

    *
        -webkit-user-select: none
        -moz-user-select: none
        -ms-user-select: none
        -o-user-select: none
        user-select: none

    .guide
        position: absolute
        top: 0
        left: 0

        div
            background-color: blue
            width: 100%
            height: 100%


        &.vertical
            padding: 0px 2px
            width: 1px
            height: 100000000px

            &:hover
                cursor: col-resize

        &.horizontal
            padding: 2px 0px
            width: 100000000px
            height: 1px

            &:hover
                cursor: row-resize
.rule
    position: absolute
    background-color: #303030
    color: #b4b4b1
    font-size: 9px
    font-family: 'Arial' 'Helvetica' sans-serif

    li
        position: absolute

    p
        position: absolute

    &.horizontal
        width: 100%
        height: 17px
        border-left: 1px #696969 solid
        border-bottom: 1px #696969 solid

        li
            height: 25%
            width: 0px
            border-left: 1px #696969 solid
            left: 0
            bottom: 0

        .indicator
            width: 0px
            height: 100%
            border-color: white
            border-style: dotted

        .gap
            height: 100%

        .mid-gap
            height: 50%

    &.vertical
        width: 17px
        height: 100%
        border-top: 1px #696969 solid
        border-right: 1px #696969 solid

        li
            height: 0
            width: 25%
            border-top: 1px #696969 solid
            right: 0
            top: 0

        .indicator
            width: 100%
            height: 0px
            border-color: white
            border-style: dotted

        p
            word-wrap: break-word;
            width: 5px

        .gap
            width: 100%

        .mid-gap
            width: 50%


